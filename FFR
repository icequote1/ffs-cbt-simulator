<div class="container">
  <h1>ðŸ‡³ðŸ‡¬ Federal Fire Service CBT Mock Exam</h1>
  <div id="timer">Time Left: 60:00</div>
  <hr>

  <div id="quiz"></div>

  <div class="btns">
    <button id="prevBtn" onclick="prevQuestion()">Previous</button>
    <button id="nextBtn" onclick="nextQuestion()">Next</button>
    <button id="submitBtn" onclick="submitQuiz()">Submit</button>
  </div>

  <div id="result"></div>
</div>

<script>
let current = 0;
let answers = [];
let timeLeft = 60*60; // 60 minutes
let timer;

function showQuestion(index){
  const q = quizData[index];
  let html = "<div class='question'><b>Q"+(index+1)+".</b> "+q.q+"</div><div class='options'>";
  q.o.forEach((opt,i)=>{
    const checked = answers[index]===i?"checked":"";
    html += "<label><input type='radio' name='q"+index+"' value='"+i+"' "+checked+" onchange='selectOption("+index+","+i+")'> "+opt+"</label>";
  });
  html += "</div>";
  document.getElementById("quiz").innerHTML = html;
  document.getElementById("prevBtn").style.display = index===0?"none":"inline-block";
  document.getElementById("nextBtn").style.display = index===quizData.length-1?"none":"inline-block";
  document.getElementById("submitBtn").style.display = index===quizData.length-1?"inline-block":"none";
}

function selectOption(qIndex,optIndex){ answers[qIndex]=optIndex; }
function nextQuestion(){ if(current<quizData.length-1){current++;showQuestion(current);} }
function prevQuestion(){ if(current>0){current--;showQuestion(current);} }

function submitQuiz(){
  clearInterval(timer);
  let score = 0;
  quizData.forEach((q,i)=>{ if(answers[i]===q.a) score++; });
  const percent = ((score/quizData.length)*100).toFixed(2);

  document.getElementById("quiz").style.display="none";
  document.getElementById("prevBtn").style.display="none";
  document.getElementById("nextBtn").style.display="none";
  document.getElementById("submitBtn").style.display="none";
  document.getElementById("timer").style.display="none";

  document.getElementById("result").innerHTML = "âœ… You scored <b>"+score+"</b> out of <b>"+quizData.length+"</b><br>Percentage: <b>"+percent+"%</b>";
}

function updateTimer(){
  const minutes=Math.floor(timeLeft/60);
  const seconds=timeLeft%60;
  document.getElementById("timer").textContent="Time Left: "+minutes+":"+(seconds<10?"0":"")+seconds;
  timeLeft--;
  if(timeLeft<0) submitQuiz();
}

function startTimer(){ timer=setInterval(updateTimer,1000); }

const quizData=[
  // Your 100 questions go here (copy the quizData array you provided)
  {q:"The Federal Fire Service operates under which ministry?",o:["Ministry of Defence","Ministry of Environment","Ministry of Interior","Ministry of Power"],a:2},
  {q:"Who is the current President of Nigeria?",o:["Goodluck Jonathan","Bola Ahmed Tinubu","Muhammadu Buhari","Yemi Osinbajo"],a:1},
  {q:"When did Nigeria gain independence?",o:["1960","1963","1957","1970"],a:0},
  // ... (continue all 100 questions)
  {q:"Emergency number for fire service in Nigeria â€”",o:["911","122","112","199"],a:2}
];

showQuestion(current);
startTimer();
</script>
